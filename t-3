import java.lang.reflect.Method;
import java.lang.annotation.Annotation;

public class APIDocumentationReader {
    public static void main(String[] args) {
        try {
            Class<?> myAPIClass = MyAPIClass.class;

            // Get class-level annotation
            if (myAPIClass.isAnnotationPresent(APIDescription.class)) {
                APIDescription classAnnotation = myAPIClass.getAnnotation(APIDescription.class);
                System.out.println("Class Documentation: " + classAnnotation.description());
            }

            // Get method-level annotations
            for (Method method : myAPIClass.getDeclaredMethods()) {
                if (method.isAnnotationPresent(APIDescription.class)) {
                    APIDescription methodAnnotation = method.getAnnotation(APIDescription.class);
                    System.out.println("\nMethod: " + method.getName());
                    System.out.println("Description: " + methodAnnotation.description());
                }
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
